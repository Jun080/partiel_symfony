{% extends 'base.html.twig' %}

{% block title %}Sélection des Propositions{% endblock %}

{% block body %}
    <h1>Sélection des Propositions</h1>
    <form method="post" action="{{ path('handle_selection', {'id': theme.id}) }}">
        {{ form_start(form) }}

        {% if form.vars.value is not empty and form.vars.value.places is not null %}
            {% for place in range(1, form.vars.value.places) %}
                <label for="proposition_form_top_{{ place }}">Top {{ place }}</label>
                {{ form_row(form['top_' ~ place]) }}
            {% endfor %}
        {% else %}
            <p>Aucune place disponible pour la sélection.</p>
        {% endif %}

        <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}
    </form>
{% endblock %}
